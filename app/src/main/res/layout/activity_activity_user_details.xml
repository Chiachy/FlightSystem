<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.shanshan.flightmanager.ActivityUserDetails">

    <Toolbar
        android:id="@+id/fb_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/skyBlue"
        android:title="@string/user_details" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="赖 琛"
        android:textColor="@color/skyBlueDark"
        android:textSize="35sp"
        android:id="@+id/user_name"
        android:layout_marginStart="22dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/fb_toolbar"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="先 生"
        android:textSize="20sp"
        android:id="@+id/user_sex"
        android:layout_marginStart="14dp"
        android:layout_alignBottom="@+id/user_name"
        android:layout_toEndOf="@+id/user_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="年龄："
        android:textColor="@color/skyBlue"
        android:textSize="20sp"
        android:id="@+id/age"
        android:layout_marginStart="46dp"
        android:layout_alignTop="@+id/user_sex"
        android:layout_toEndOf="@+id/user_sex" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="20sp"
        android:text="22"
        android:id="@+id/user_age"
        android:layout_alignBottom="@+id/age"
        android:layout_toEndOf="@+id/age" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="账户余额:"
        android:id="@+id/crash_balance"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/user_name"
        android:layout_alignStart="@+id/user_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="5400"
        android:textColor="@color/skyBlue"
        android:textSize="40sp"
        android:id="@+id/user_crash_balance"
        android:layout_alignBaseline="@+id/crash_balance"
        android:layout_alignBottom="@+id/crash_balance"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="您的订单："
        android:id="@+id/textView"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/crash_balance" />

    <android.support.v7.widget.RecyclerView
        android:layout_marginRight="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_alignParentBottom="true">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
